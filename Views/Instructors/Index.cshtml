@model IEnumerable<MyClub.Models.Instructor>

@{
    ViewBag.Title = "Index";
}

<br />
<h1 class="text-center">Trenerzy</h1>
<br />

@if (Context.User.IsInRole("Admin"))
{
    <a href='@Url.Action("Create", "Instructors" )'>
        <button type="button" class="btn btn-success">Dodaj trenera</button>
    </a>
}
<br />
<br />
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <svg style="margin-right: 5px;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-square" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12z" />
                </svg>
                @Html.ActionLink(item.User.Name + " " + item.User.Surname, "Details", new { id = item.ID })
            </td>
            <td>
                @if (Context.User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                }

            </td>
        </tr>
    }

</table>
