@model IEnumerable<MyClub.Models.Article>

@{
    ViewBag.Title = "Index";
}

<br />
<h1 class="text-center">Forum</h1>
<br />

@if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Trainer"))
{
    <a href='@Url.Action("Create", "Article" )'>
        <button type="button" class="btn btn-success">Dodaj nowy artykuł</button>
    </a>
}
<br />
<br />

<table class="table">

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    <h4>@Html.ActionLink(item.Subject, "Details", new { id = item.ID })</h4>
                </td>
            </tr>
        }
    }
    else
    {
        <h2>Brak danych!</h2>
    }
</table>

